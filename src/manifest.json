{

    "manifest_version": 2,
    "name": "audio download button",
    "version": "0.0.1",
  
    "description": "Mp3 download button for youtube and bilibili",
    "author": "Eric Lam",
    "developer": {
      "name": "Eric Lam",
      "url": "https://github.com/eric2788"
    },
    "icons": {
      "48": "icons/icon.png"
    },

    "permissions": [
      "webRequest",
      "<all_urls>",
      "storage",
      "notifications"
    ],

    "content_scripts": [
      {
        "matches": ["*://www.bilibili.com/video/*", "*://www.youtube.com/*"],
        "js": ["index.js"]
      }
    ],

    "background":{
        "scripts": ["background.js"]
    }
  
  }